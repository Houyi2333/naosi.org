---
import Service from "../components/Service.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <h2 class="home-heading">服务导航</h2>
  <div class="service-grid">
    <Service
      icon="graduation-cap"
      url="https://manual.naosi.org/course/pan/"
      title="资料云盘"
      description="汇集各类学习资料"
    />
    <Service
      icon="archive"
      url="http://mirror.dlut.edu.cn"
      title="开源镜像"
      description="大工开源软件镜像站"
    />
    <Service
      icon="globe"
      url="https://manual.naosi.org/life/network/#dns"
      title="域名解析"
      description="202.118.66.6"
    />
    <Service
      icon="clock-o"
      url="https://manual.naosi.orglife/network/#ntp"
      title="授时服务"
      description="time.dlut.edu.cn"
    />
    <Service
      icon="envelope"
      url="https://naosi-dlut.feishu.cn/mail"
      title="社团邮箱"
      description="社团专用邮箱"
    />
  </div>
  <style>
    .home-heading {
      font-weight: normal;
      font-size: 1.6rem;
    }

    .home-heading::before {
      content: '# ';
    }

    .service-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
      gap: 16px;
      text-align: center;
    }
  </style>
</Layout>
